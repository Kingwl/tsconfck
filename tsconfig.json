{
	"compilerOptions": {
		"outDir": "build",
		"target": "esnext",
		"module": "esnext",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"allowSyntheticDefaultImports": true
  },
	"include": [
		"@types/**/*",
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
